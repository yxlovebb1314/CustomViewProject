<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="smallTextTitle">
        <item name="android:background">@drawable/shape_small_title</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginVertical">15dp</item>
    </style>

    <style name="customLayoutItem">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/shape_custom_layout_item</item>
    </style>
</resources>